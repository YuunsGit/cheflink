generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          BigInt    @id @default(autoincrement())
  userId      BigInt
  slug        String    @unique
  title       String
  image       String
  steps       String[]
  ingredients String[]
  User        User      @relation(fields: [userId], references: [id])
  comments    Comment[]
}

model User {
  id       BigInt    @id @default(autoincrement())
  username String    @unique
  email    String    @unique
  password String    @unique
  recipes  Recipe[]
  comments Comment[]
}

model Comment {
  id       BigInt @id @default(autoincrement())
  userId   BigInt
  recipeId BigInt
  content  String
  rating   Int
  Recipe   Recipe @relation(fields: [recipeId], references: [id])
  User     User   @relation(fields: [userId], references: [id])
}
